<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_title">

    <ImageView
        android:id="@+id/login_iv_backphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:padding="10dp"
        android:src="@drawable/back"/>

    <com.lingzhi.smart.view.widget.RoundTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp"
        android:text="@string/enter_msgcode"/>

    <com.lingzhi.smart.view.widget.PhoneCode
        android:id="@+id/login_pc_code"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="180dp"
        android:layout_height="65dp" />

    <com.lingzhi.smart.view.widget.TimerText
        android:id="@+id/login_tt_sendmsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/retry_msgcode"/>

    <ImageView
        android:clickable="true"
        android:id="@+id/login_iv_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/next_fail"/>


</LinearLayout>