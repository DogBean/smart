<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_title"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/esp_setting_iv_backphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="10dp"
        android:src="@drawable/back"/>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/esp_text_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置Wi-Fi"/>

        <EditText
            android:layout_width="283dp"
            android:layout_height="42dp"
            android:layout_marginTop="82dp"
            android:background="@drawable/ic_esp_edit_bg"
            android:gravity="center_vertical"
            android:hint="Wi-Fi名称"/>

        <EditText
            android:layout_width="283dp"
            android:layout_height="42dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_esp_edit_bg"
            android:gravity="center_vertical"
            android:hint="Wi-Fi密码"/>

        <Button
            android:layout_width="285dp"
            android:layout_height="42dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/ic_esp_pre_next_bg"
            android:text="下一步"/>
    </LinearLayout>
</LinearLayout>