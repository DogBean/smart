<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_title"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/esp_iv_backphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="10dp"
        android:src="@drawable/back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            style="@style/esp_text_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始配网"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="75dp"
            android:background="@drawable/shape_esp_pre_bg"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    style="@style/esp_text_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="1.确保设备开机"/>

                <TextView
                    style="@style/esp_text_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="2.手机靠近设备"/>

                <TextView
                    style="@style/esp_text_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="3.暂时不支持5Gwifi，请保持在2.4G网络下"/>

                <TextView
                    style="@style/esp_text_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="15dp"
                    android:text="4.没有连接成功，请重新操作一次"/>

            </LinearLayout>


        </RelativeLayout>

        <Button
            android:layout_width="285dp"
            android:layout_height="42dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/ic_esp_pre_next_bg"
            android:text="完成准备，下一步"/>


    </LinearLayout>

</LinearLayout>