<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_recommend_head_layout_height"
    android:paddingEnd="@dimen/default_general_margin"
    android:paddingStart="@dimen/default_general_margin"
    android:background="@color/black"
    android:paddingTop="@dimen/default_general_margin">


    <TextView
        android:id="@+id/single_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="18dp"
        android:text="标题"
        android:textColor="@color/font_normal"
        android:textSize="@dimen/default_small_text_size" />

    <ImageView
        android:layout_width="1px"
        android:layout_height="11dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="18dp"
        android:background="@color/font_normal" />

    <TextView
        android:id="@+id/single_item_type_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="18dp"
        android:text="三字经"
        android:textColor="@color/font_normal"
        android:textSize="@dimen/default_small_text_size" />

    <TextView
        android:id="@+id/single_item_type_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="234dp"
        android:padding="@dimen/default_tiny_padding"
        android:textSize="@dimen/default_tiny_text_size" />


</LinearLayout>

